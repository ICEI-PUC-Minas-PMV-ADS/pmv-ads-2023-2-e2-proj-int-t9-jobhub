<!DOCTYPE html>
<html lang="en">
@model HomeIndexViewModel

@{
    ViewData["Title"] = "Home Page";
}
<head>
    <title>Jobhub</title>

    <script defer src="script.js"></script>
</head>
<body>

    <h1>Jobhub</h1>
    <p>
        Encontre seu emprego dos sonhos
    </p>

    <h2>Pesquisar</h2>
    <form class="example" action="" method="GET">
        <input type="text" placeholder="Search.." name="nome">
        <button type="submit"><i class="fa fa-search"></i></button>
    </form>

    <div class="main_body">
        @foreach (var vaga in Model.Vagas)
        {
            <a href="@Url.Action("PaginaVaga", "Vaga", new { id = vaga.Id })" style="text-decoration: none; color: inherit;">
                 <div class="item">
                <div style="margin: 0 5px;">
                    <img src="imgempresas.jpg" alt="imgempresas">
                </div>
                <div class="info">
                    <div class="info2">
                        <span>@vaga.Titulo</span>
                        <span id="id1">NEW!</span>
                        <span id="id2">FEATURED</span>
                    </div>
                    <div class='info2'>
                        <span>@vaga.Salario</span>
                        <span>-</span>
                        <span>@vaga.FormaDeTrabalho</span>
                        <span>-</span> 
                    </div>
                    <div class="info2">
                        <span>@vaga.Empresa</span>
                        <span> - </span>
                        <span>@vaga.Local</span>
                        </div>
                    <div class="info2">
                        <span> @vaga.Categoria</span>
                        <span> - </span>
                        <span> @vaga.Nivel </span>
                        <span> - </span>
                        <span> @vaga.Titulo</span>
                    </div>
                </div>
                <div class="info2">
                    <span> @vaga.Descricao</span>
                </div>
                    
            </div>
            </a>
        }
    </div>

</body>
</html>