@model JobHub.Models.Usuario

@{
    Layout = null;
}

@{
    ViewData["Title"] = "Esqueci a Senha";
}

<div class="page">
    <form asp-action="Login" class="formLogin">
        <h1>Redefinir Senha</h1>
        <p>Digite os seus dados de acesso no campo abaixo.</p>
        <label asp-for="Email">Digite seu e-mail</label>
        <input asp-for="Email" placeholder="Digite seu e-mail" />
        <span asp-validation-for="Email" class="text-danger"></span>
       
        <a asp-action="Login">Voltar</a>
        <input type="submit" value="Enviar Email" class="btn" />
    </form>
</div>

<style>
    body {
        background-color: #0f1135;
        font-family: 'Roboto', sans-serif;
    }

    body {
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
        color: #023047
    }

    .page {
        display: flex;
        flex-direction: column;
        align-items: center;
        align-content: center;
        justify-content: center;
        width: 100%;
        height: 100vh;
    }

    .formLogin {
        display: flex;
        flex-direction: column;
        background-color: #fff;
        border-radius: 7px;
        padding: 40px;
        box-shadow: 10px 10px 40px rgba(0, 0, 0, 0.4);
        gap: 5px
    }

    .areaLogin img {
        width: 420px;
    }

    .formLogin h1 {
        padding: 0;
        margin: 0;
        font-weight: 500;
        font-size: 2.3em;
    }

    .formLogin p {
        display: inline-block;
        font-size: 14px;
        color: #666;
        margin-bottom: 25px;
    }

    .formLogin input {
        padding: 15px;
        font-size: 14px;
        border: 1px solid #ccc;
        margin-top: 5px;
        border-radius: 4px;
        transition: all linear 160ms;
        outline: none;
    }


        .formLogin input:focus {
            border: 1px solid #0f1135;
        }

    .formLogin label {
        font-size: 14px;
        font-weight: 600;
    }

    .formLogin a {
        display: inline-block;
        margin-bottom: 10px;
        font-size: 13px;
        color: #555;
        transition: all linear 160ms;
    }

        .formLogin a:hover {
            color: #0f1135;
        }

    .btn {
        background-color: #0f1135;
        color: #fff;
        font-size: 14px;
        font-weight: 600;
        border: none !important;
        transition: all linear 160ms;
        cursor: pointer;
        margin: 0 !important;
    }

        .btn:hover {
            transform: scale(1.05);
            background-color: #0f1135;
        }
</style>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
